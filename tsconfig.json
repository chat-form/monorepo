{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@chat-form/core": ["packages/core/src/index.tsx"],
      "@chat-form/core/*": ["packages/core/src/*"],
      "@chat-form/animations/*": ["packages/animations/src/*"],
      "docs/*": ["docs/*"]
    }
  }
}
